{
  "include": ["./src"],
  "compilerOptions": {
    "target": "es5",
    "outDir": "./www",
    "baseUrl": ".",
    "sourceMap": true,
    "importHelpers": true,
    "isolatedModules": false,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "types": [
      "jasmine",
      "jasminewd2",
      "node"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@angular/*": ["../../node_modules/@angular/*"]
    }
  },
  "files": [
    "./src/test.ts",
    "./src/polyfills.ts"
  ]
}
