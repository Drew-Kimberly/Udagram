{
  "name": "udagram-monorepo",
  "version": "1.0.0",
  "description": "The Udagram app monorepo root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Drew-Kimberly/Udagram.git"
  },
  "author": "Drew Kimberly",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Drew-Kimberly/Udagram/issues"
  },
  "homepage": "https://github.com/Drew-Kimberly/Udagram#readme",
  "dependencies": {
    "@drewkimberly/udagram-auth": "file:packages/udagram-auth",
    "@drewkimberly/udagram-feed-svc": "file:packages/udagram-feed-svc",
    "@drewkimberly/udagram-frontend": "file:packages/udagram-frontend",
    "@drewkimberly/udagram-user-svc": "file:packages/udagram-user-svc"
  },
  "devDependencies": {
    "@angular-devkit/architect": "~0.12.3",
    "@angular-devkit/build-angular": "^0.803.25",
    "@angular-devkit/core": "~7.2.3",
    "@angular-devkit/schematics": "~7.2.3",
    "@angular/cli": "^8.3.25",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/http": "^7.2.15",
    "@angular/language-service": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "@ionic/angular-toolkit": "^1.5.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/node": "^13.7.4",
    "@types/sequelize": "^4.28.8",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "codelyzer": "~4.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.6",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "protractor": "^5.4.3",
    "serialize-javascript": "^2.1.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "k8s:apply": "npm-run-all --parallel k8s:apply:*",
    "k8s:destroy": "npm-run-all --parallel k8s:destroy:*",
    "k8s:apply:feed-svc": "kubectl apply -f k8s/udagram-feed-svc",
    "k8s:apply:frontend": "kubectl apply -f k8s/udagram-frontend",
    "k8s:apply:reverse-proxy": "kubectl apply -f k8s/udagram-reverse-proxy",
    "k8s:apply:user-svc": "kubectl apply -f k8s/udagram-user-svc",
    "k8s:destroy:feed-svc": "kubectl delete -f  k8s/udagram-feed-svc",
    "k8s:destroy:frontend": "kubectl delete -f k8s/udagram-frontend",
    "k8s:destroy:reverse-proxy": "kubectl delete -f k8s/udagram-reverse-proxy",
    "k8s:destroy:user-svc": "kubectl delete -f k8s/udagram-user-svc",
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "build:dev": "npm-run-all --parallel *:build:dev",
    "build:prod": "npm run build:dev",
    "build-images": "npm-run-all --parallel \"*:build-image -- {@}\" --",
    "ci": "lerna run ci --stream",
    "clean": "lerna clean -y && rm -rf node_modules",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "postinstall": "npm run bootstrap",
    "push-images": "npm-run-all --parallel *:push-image",
    "start:k8s": "npm-run-all --parallel start:k8s:*",
    "start:k8s:backend": "kubectl port-forward service/reverse-proxy 8080:8080",
    "start:k8s:frontend": "kubectl port-forward service/frontend 8100:8100",
    "test": "lerna run test --stream",
    "typecheck": "lerna run typecheck --stream",
    "auth:build:dev": "lerna run build:dev --stream --scope='@drewkimberly/udagram-auth'",
    "auth:build:prod": "lerna run build:prod --stream --scope='@drewkimberly/udagram-auth'",
    "auth:lint": "npm run lint -- --scope='@drewkimberly/udagram-auth'",
    "auth:lint:fix": "npm run lint:fix -- --scope='@drewkimberly/udagram-auth'",
    "auth:test": "npm run test -- --scope='@drewkimberly/udagram-auth'",
    "auth:typecheck": "npm run typecheck -- --scope='@drewkimberly/udagram-auth'",
    "feed-svc:build:dev": "lerna run build:dev --stream --scope='@drewkimberly/udagram-feed-svc'",
    "feed-svc:build:prod": "npm run feed-svc:build:dev",
    "feed-svc:build-image": "bash ./scripts/bin/build.sh uncledrewbie/udagram-feed-svc packages/udagram-feed-svc/Dockerfile ./packages/udagram-feed-svc",
    "feed-svc:push-image": "docker push uncledrewbie/udagram-feed-svc",
    "feed-svc:lint": "npm run lint -- --scope='@drewkimberly/udagram-feed-svc'",
    "feed-svc:lint:fix": "npm run lint:fix -- --scope='@drewkimberly/udagram-feed-svc'",
    "feed-svc:start": "lerna run start --stream --scope='@drewkimberly/udagram-feed-svc'",
    "feed-svc:test": "npm run test -- --scope='@drewkimberly/udagram-feed-svc'",
    "feed-svc:typecheck": "npm run typecheck -- --scope='@drewkimberly/udagram-feed-svc'",
    "frontend:build:dev": "lerna run build:dev --stream --scope='@drewkimberly/udagram-frontend'",
    "frontend:build:prod": "npm run frontend:build:dev",
    "frontend:build-image": "bash ./scripts/bin/build.sh uncledrewbie/udagram-frontend packages/udagram-frontend/Dockerfile ./packages/udagram-frontend",
    "frontend:push-image": "docker push uncledrewbie/udagram-frontend",
    "frontend:lint": "npm run lint -- --scope='@drewkimberly/udagram-frontend'",
    "frontend:lint:fix": "npm run lint:fix -- --scope='@drewkimberly/udagram-frontend'",
    "frontend:start": "lerna run start --stream --scope='@drewkimberly/udagram-frontend'",
    "frontend:test": "npm run test -- --scope='@drewkimberly/udagram-frontend'",
    "frontend:typecheck": "npm run typecheck -- --scope='@drewkimberly/udagram-frontend'",
    "reverse-proxy:build-image": "bash ./scripts/bin/build.sh uncledrewbie/udagram-reverse-proxy packages/udagram-reverse-proxy/Dockerfile ./packages/udagram-reverse-proxy",
    "reverse-proxy:push-image": "docker push uncledrewbie/udagram-reverse-proxy",
    "user-svc:build:dev": "lerna run build:dev --stream --scope='@drewkimberly/udagram-user-svc'",
    "user-svc:build:prod": "npm run user-svc:build:dev",
    "user-svc:build-image": "bash ./scripts/bin/build.sh uncledrewbie/udagram-user-svc packages/udagram-user-svc/Dockerfile ./packages/udagram-user-svc",
    "user-svc:push-image": "docker push uncledrewbie/udagram-user-svc",
    "user-svc:lint": "npm run lint -- --scope='@drewkimberly/udagram-user-svc'",
    "user-svc:lint:fix": "npm run lint:fix -- --scope='@drewkimberly/udagram-user-svc'",
    "user-svc:start": "lerna run start --stream --scope='@drewkimberly/udagram-user-svc'",
    "user-svc:test": "npm run test -- --scope='@drewkimberly/udagram-user-svc'",
    "user-svc:typecheck": "npm run typecheck -- --scope='@drewkimberly/udagram-user-svc'"
  }
}
