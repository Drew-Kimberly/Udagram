  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "build:dev": "lerna run build:dev --stream",
    "build:prod": "lerna run build:prod --stream",
    "ci": "lerna run ci --stream",
    "clean": "lerna clean -y",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "postinstall": "npm run bootstrap",
    "start": "lerna run start --stream",
    "test": "lerna run test --stream",
    "typecheck": "lerna run typecheck --stream",
    "api:build:dev": "npm run build:dev -- --scope='udagram-restapi'",
    "api:build:prod": "npm run build:prod -- --scope='udagram-restapi'",
    "api:lint": "npm run lint -- --scope='udagram-restapi'",
    "api:lint:fix": "npm run lint:fix -- --scope='udagram-restapi'",
    "api:start": "npm run start -- --scope='udagram-restapi'",
    "api:test": "npm run test -- --scope='udagram-restapi'",
    "api:typecheck": "npm run typecheck -- --scope='udagram-restapi'",
    "frontend:build:dev": "npm run build:dev -- --scope='udagram-frontend'",
    "frontend:build:prod": "npm run build:dev -- --scope='udagram-frontend'",
    "frontend:lint": "npm run lint -- --scope='udagram-frontend'",
    "frontend:lint:fix": "npm run lint:fix -- --scope='udagram-frontend'",
    "frontend:start": "npm run start -- --scope='udagram-frontend'",
    "frontend:test": "npm run test -- --scope='udagram-frontend'",
    "frontend:typecheck": "npm run typecheck -- --scope='udagram-frontend'"
  }
}
